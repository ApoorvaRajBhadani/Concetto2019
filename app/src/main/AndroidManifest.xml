<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rishabh.concetto2019">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round">
        <activity android:name=".SplashScreen.MVP.SplashActivity"
            android:theme="@style/AppTheme2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".HomePage.MVP.HomePageActivity"
            android:theme="@style/AppTheme2"
            android:screenOrientation="portrait"
            />
        <activity android:name=".EventPage.MVP.EventActivityNew"
            android:screenOrientation="portrait"
            android:label="Events"
            android:theme="@style/AppTheme2"
            />
        <activity android:name=".TechTalkPage.MVP.TechTalkActivity"
            android:screenOrientation="portrait"
            android:label="Tech Talks"
            android:theme="@style/AppTheme"/>
        <activity android:name=".WorkshopPage.MVP.WorkshopActivity"
            android:screenOrientation="portrait"
            android:label="Workshops"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".EventDetail.MVP.EventDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:label="Event Details"/>
        <activity android:name=".Authentication.LogInPage.MVP.LoginActivity"
            android:screenOrientation="portrait"
            android:label="Login"
            android:theme="@style/AppTheme2"/>
        <activity android:name=".Authentication.SignUpPage.MVP.SignupActivity"
            android:screenOrientation="portrait"
            android:label="SignUp"
            android:theme="@style/AppTheme2"/>
        <activity android:name=".Aboutus.AboutUsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"/>
        <activity android:name=".Developers.MVP.DeveloperActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"/>

        <activity android:name=".Profile.MVP.ProfileActivity"
            android:theme="@style/AppTheme2"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>