<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rishabh.concetto2019">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme">
        <activity android:name=".HomePage.MVP.HomePageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashScreen.MVP.SplashActivity"/>
        <activity android:name=".EventPage.MVP.EventActivity"
            android:screenOrientation="portrait"
            android:label="Events"/>
        <activity android:name=".SpecialNightPage.MVP.SpecialNightActivity"
            android:screenOrientation="portrait"
            android:label="Special Night"/>
        <activity android:name=".TechTalkPage.MVP.TechTalkActivity"
            android:screenOrientation="portrait"
            android:label="Tech Talks"/>
        <activity android:name=".WorkshopPage.MVP.WorkshopActivity"
            android:screenOrientation="portrait"
            android:label="Workshops"/>
    </application>

</manifest>