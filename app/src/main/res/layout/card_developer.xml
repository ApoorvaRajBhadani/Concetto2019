<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/dev_image"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_weight="1"
        android:src="@drawable/astro_10"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/dev_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Rishabh Agarwal"
            android:gravity="center_vertical"
            android:textSize="19sp"
            android:paddingLeft="22dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/dev_branch"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Mathematics and computing"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dev_github"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/github"
                android:scaleType="fitXY"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:id="@+id/dev_linkedin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/linked"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>