<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_layout_contactus"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/d_image1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:paddingLeft="4dp"
        android:paddingTop="3dp"
        android:paddingBottom="4dp"
        android:src="@drawable/astro_10"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/d_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="22dp"
        android:paddingBottom="0dp"
        android:text="Rishabh Agarwal"
        android:textColor="@android:color/black"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="co-ordinator"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="@+id/d_name" />
</androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/d_telephone"
                android:layout_height="wrap_content"
                android:src="@drawable/telephone" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/d_telephone_number"
                android:layout_height="match_parent"
                android:text="9876543210"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/d_envelop_shape"
                android:src="@drawable/envelope_shape" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/d_mail_id"
                android:layout_height="match_parent"
                android:text="00harshjainjain00@gmail.com"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>