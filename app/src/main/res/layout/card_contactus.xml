<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_layout_contactus"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/d_image1"
        android:layout_width="130dp"
        android:layout_height="112dp"
        android:layout_margin="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/astro_10" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/d_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="22dp"
            android:text="Rishabh Agarwal"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/d_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="22dp"
            android:text="co-ordinator"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/d_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/telephone" />

            <TextView
                android:id="@+id/d_telephone_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9876543210"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/d_envelop_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/envelope_shape" />

            <TextView
                android:id="@+id/d_mail_id"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00harshjainjain00@gmail.com"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>