<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_event"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="12dp"
        android:text="Events" />

    <Button
        android:id="@+id/button_workshop"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_event"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:text="Workshops" />

    <Button
        android:id="@+id/button_techtalks"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_workshop"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:text="TechTalk" />

    <Button
        android:id="@+id/button_specialnight"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_techtalks"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:text="SpecialNight" />

</RelativeLayout>